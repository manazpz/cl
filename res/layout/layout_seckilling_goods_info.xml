<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="20.0dip"
    android:paddingRight="30.0dip"
    android:paddingTop="10.0dip"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_any_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="20.0dip"
            android:drawableLeft="@drawable/ic_support_tui"
            android:drawablePadding="5.0dip"
            android:layout_weight="1"
            android:textColor="#ff686767"
            android:textSize="15sp" 
            android:text="随时退"/>
        
        <TextView
            android:id="@+id/tv_time_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="20.0dip"
            android:drawableLeft="@drawable/ic_support_guoqi"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:layout_weight="1"
            android:text="过期退"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_buy_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10.0dip"
            android:drawableLeft="@drawable/count"
            android:drawablePadding="5.0dip"
            android:textColor="#ff686767"
            android:layout_weight="1"
            android:text="已售217"
            android:textSize="15sp" />
    </LinearLayout>

    

</LinearLayout>